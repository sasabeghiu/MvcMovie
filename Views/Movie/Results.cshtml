
<h2>Movie Results: </h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">IMDB ID</th>
                <th scope="col">Type</th>
                <th scope="col">Poster</th>
                <th scope="col">Trailer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td><a target="_blank" href="https://www.imdb.com/title/@movie.ImdbID">@movie.ImdbID</a></td>
                    <td>@movie.Type</td>
                    <td><img src="@movie.Poster" alt="Movie Poster" class="img-thumbnail" style="max-height: 300px;"></td>
                    <td><iframe width="500" height="300" src="@movie.TrailerUrl"></iframe></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}
